<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_login"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="ADD WORKOUT"
            android:textAlignment="center"
            android:textColor="@color/bg_main"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/txt_exercisetype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Exercise Type"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/int_reps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No.of reps"
            android:inputType="number"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/int_sets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No. of sets"
            android:inputType="number"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/txt_date"
            android:layout_width="236dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:id="@+id/btn_date"/>


        <Button
            android:id="@+id/btn_add"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/btn_register"
            android:text="ADD YOUR WORKOUT"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>